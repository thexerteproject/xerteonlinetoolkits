<wizard menus="Connectors" restrict="template" modelFile="connectorHotspotImage">  <pageWizard remove="true" duplicate="false">    <newNodes>	  <connectorHotspotImage><![CDATA[<connectorHotspotImage name="Enter Page Title" text="Enter text for the page here" textWidth="narrow" url="Select an Image" tip="Enter a Description for Accessibility" highlight="false" align="Left" home="false" back="false" next="false"	  notFoundMessage="could not be found in this project." continueBtnTxt="Close" />]]></connectorHotspotImage>	</newNodes>    </pageWizard>  <!-- HOTSPOT IMAGE INTERACTION ================================= -->  <connectorHotspotImage menu="Connectors" menuItem="Hotspot Image Connector" hint="An interaction allowing you to mark up an image with regions. When selected, each region will take you to another page in the project or present further information." icon="icConHotSpotImage" thumb="thumbs/connectorHotspotImage.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#hotspotimageconnector" remove="true">      <name label="Page Title" type="TextInput" wysiwyg="true" />    <text label="Page Text" type="TextArea" height="200"/>	<align label="Align Text" options="Left,Right" type="ComboBox" data="Left,Right" defaultValue="Left" width="100"/>	<highlight label="Highlight Hotspots" type="CheckBox" defaultValue="false"/>		<image type="group" label="Image">		<url label="File" type="media"/>		<textWidth label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="max,wide,narrow,none" defaultValue="narrow" width="200"/>		<tip label="Description" type="TextInput"/>	</image>	    <hidePanel label="Hide Panel" type="CheckBox" defaultValue="false" deprecated="This property is deprecated"/>    <hsAppearance type="group" label="Hotspot Highlight Appearance" optional="true" tooltip="Set colours of hotspots">        <hicol label="Stroke Colour" type="ColourPicker" optional="true" defaultValue="0xFFFF00" tooltip="The colour of the edges of the hotspot"/>        <hs_strokeOpacity label="Stroke Opacity" type="TextInput" optional="true" defaultValue="1" tooltip="The opacity (a decimal number between 0 and 1) of the edges of the hotspot"/>        <hs_strokeWidth label="Stroke Width" type="TextInput" optional="true" defaultValue="1" tooltip="Width of the edges of the hotspot" />        <hs_fill label="Fill Hotspot" type="CheckBox" optional="true" defaultValue="false" tooltip="Fill the hotspot" />        <hs_fillColor label="Fill Colour" type="ColourPicker" optional="true" defaultValue="0xFFFF00" tooltip="The fill colour of the hotspot"/>        <hs_fillOpacity label="Fill Opacity" type="TextInput" optional="true" defaultValue="1" tooltip="The opacity (a decimal number between 0 and 1) of fill colour of the hotspot"/>        <hs_showTooltip label="Show Tooltip" type="CheckBox" optional="true" defaultValue="true" tooltip="Show tooltip on hover, the label is used as tooltip"/>	</hsAppearance>    <continueBtnTxt label="Close Button Label" type="TextInput" wysiwyg="true" language="true"/>    <continueBtnWidth label="Close Button Width" type="NumericStepper" min="80" max="150" step="10" width="100" defaultValue="100" language="true" deprecated="Width is now set automatically"/>	<popUp type="group" label="Dialog Position" optional="true" tooltip="Control the position of the pop up window that appears when hotspot clicked">		<popUpVAlign label="Vertical" options="Top,Middle,Bottom" type="ComboBox" width="120" data="top,middle,bottom" defaultValue="middle" optional="true"/>		<popUpHAlign label="Horizontal" options="Left,Centre,Right" type="ComboBox" width="120" data="left,center,right" defaultValue="center" optional="true"/>	</popUp>	    <imageTransition label="Image Transition" options="Blinds,Dissolve,Fade,Fly,Iris,Squeeze,Wipe,Zoom" type="ComboBox" data="blinds,dissolve,fade,fly,iris,squeeze,wipe,zoom" defaultValue="wipe" width="100" optional="true" deprecated="This property is no longer required"/>    <info><![CDATA[<b>For full details on how to use the Hotspot Image Connector Page. <u><a href="http://xerte.org.uk/docs/xot/help/HotspotImageConnectorPageGuide.pdf" target="_blank">Click here</a></u></b>]]></info>    <newNodes>      <cHotspot><![CDATA[<cHotspot name="Tooltip Hotspot" showTitle="true" windowType="dialog" destination="Enter Destination Page ID" exitNav="all" text="Description for the hotspot" x="0" y="0" w="100" h="100" />]]></cHotspot>    </newNodes>  </connectorHotspotImage>  <!-- cHOTSPOT =============================================== -->  <cHotspot menuItem="Hotspot" label="Edit Hotspot" type="flexhotSpot" icon="icLayers" remove="true">  	<name label="Title" type="TextInput" wysiwyg="false"/>	<alttext label="Tooltip Description" type="script" height="100" defaultValue="Enter a Description for Accessibility" optional="true"/>	<showTitle label="Show Title" type="CheckBox" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotMovie!=null||hotspotPopUp!=null||(htm!=null&amp;&amp;htm!='')||iframe!=null" defaultValue="false" mandatory="true" tooltip="Include title when content is displayed in a dialog box"/>	<!--<windowType label="Display In" options="Dialog,Lightbox" type="ComboBox" data="dialog,lightbox" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotMovie!=null||hotspotPopUp!=null||iframe!=null" defaultValue="dialog" mandatory="true" width="200"/>-->	<windowType label="Display In" options="Dialog,Lightbox" type="ComboBox" data="dialog,lightbox" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotPopUp!=null||iframe!=null" defaultValue="dialog" mandatory="true" width="200"/>		<video type="group" label="Video" optional="true" tooltip="Show a video player when hotspot clicked">		<hotspotMovie label="File" type="media" conditionTrigger="true" optional="true" defaultValue="Select a Video"/>		<tip label="Description" type="TextInput" optional="true" defaultValue="Enter a Description for Accessibility"/>	</video>		<videoTiming type="group" label="Video Start &amp; End Times" condition="hotspotMovie!=null" optional="true" tooltip="Play from &amp; stop at the times entered (in seconds). By default the whole video will play">		<startFrame label="Start Time" type="textInput" defaultValue="" optional="true"/>		<endFrame label="End Time" type="textInput" defaultValue="" optional="true"/>	</videoTiming>		<movieSize label="Video Size" type="TextInput" condition="hotspotMovie!=null" defaultValue="320,240" optional="true" tooltip="By default videos will be scaled automatically to best fit on the page. This option fixes the video size (width,height). Use with caution!"/>	<!--<iframeRatio label="Video iframe Aspect Ratio" type="TextInput" condition="hotspotMovie!=null" defaultValue="16:9" tooltip="Aspect ratio for videos from external sites (e.g. YouTube)" optional="true" />-->    <reset label="Video Reset at End" type="Checkbox" defaultValue="false" optional="true" deprecated="This property is deprecated. Videos now reset on completion by default."/>		<sound type="group" label="Sound" optional="true" tooltip="Show an audio player (or play a sound automatically) when hotspot clicked">		<hotspotSound label="File" type="media" conditionTrigger="true" optional="true" defaultValue="Select an MP3 File"/>		<playerType label="Type" options="Audio Player,Auto-Play" type="ComboBox" conditionTrigger="true" data="player,auto" defaultValue="player" width="200" optional="true"/>	</sound>		<imgGroup type="group" label="Image" optional="true" tooltip="Show an image when hotspot clicked">		<imageFile label="File" type="media" conditionTrigger="true" optional="true" defaultValue="Select an Image"/>		<imageTip label="Description" type="TextInput" defaultValue="Enter a Description for Accessibility"/>	</imgGroup>		<soundTiming type="group" label="Sound Start &amp; End Times" condition="hotspotSound!=null" optional="true" tooltip="Play from &amp; stop at the times entered (in seconds). By default the whole audio will play">		<soundStart label="Start Time" type="textInput" defaultValue="" optional="true"/>		<soundEnd label="End Time" type="textInput" defaultValue="" optional="true"/>	</soundTiming>		<hotspotPopUp label="Text" type="TextArea" conditionTrigger="true" height="200" optional="true" tooltip="Show text/HTML when hotspot clicked"/>	<iframe label="iframe" type="TextInput" conditionTrigger="true" height="200" optional="true" tooltip="Show URL in an iframe when hotspot clicked"/>		<window type="group" label="New Window" optional="true" tooltip="Open a website (or custom HTML) in a new browser window when hotspot clicked">		<windowURL label="URL" type="TextInput" optional="true" tooltip="URL to open in the new window (HTML field must be blank when using this option)"/>		<htm label="HTML" type="TextArea" conditionTrigger="true" height="150" optional="true" tooltip="HTML content to open in the new window"/>		<windowWidth label="Width" type="NumericStepper" min="100" max="1030" step="10" defaultValue="550" width="100" optional="true"/>		<windowHeight label="Height" type="NumericStepper" min="100" max="1030" step="10" defaultValue="400" width="100" optional="true"/>	</window>		<destinationURL label="External Destination Page" type="TextInput" optional="true" tooltip="Open an external website when hotspot clicked. The browser will navigate away from this project"/>	<destination label="Destination Page" type="pageList" defaultValue="" optional="true" tooltip="Go to another page in this project when hotspot clicked"/>	<relNav label="Relative Destination Page" options="First Page,Previous Page,Next Page,Last Page" type="ComboBox" data="first,prev,next,last" defaultValue="next" width="200" optional="true" tooltip="Go to a relative page (i.e. next)" deprecated="This property is deprecated. You can now select a relative destination in the Destination Page optional property."/>	  </cHotspot></wizard>