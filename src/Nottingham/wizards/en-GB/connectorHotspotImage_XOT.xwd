<wizard menus="Connectors" restrict="template" modelFile="connectorHotspotImage">  <pageWizard remove="true" duplicate="false">    <newNodes>	  <connectorHotspotImage><![CDATA[<connectorHotspotImage name="Enter Page Title" text="" textWidth="narrow" url="" tip="" highlight="false" align="Left"	  notFoundMessage="could not be found in this project." />]]></connectorHotspotImage>	</newNodes>    </pageWizard>  <!-- HOTSPOT IMAGE INTERACTION ================================= -->  <connectorHotspotImage menu="Connectors" menuItem="Hotspot Image Connector" hint="An interaction allowing you to mark up an image with regions. When selected, each region will take you to another page in the project or present further information." icon="icConHotSpotImage" thumb="thumbs/connectorHotspotImage.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#hotspotimageconnector" wiki="https://xerte.org.uk/wiki/doku.php?id=connector_hotspotimageconnector_page" remove="true">      <name label="Page Title" type="TextInput" wysiwyg="true" />    <text label="Page Text" type="TextArea" height="200" placeholder="Enter text for the page here"/>	<align label="Align Text" options="Left,Right" type="ComboBox" data="Left,Right" defaultValue="Left" width="100"/>	<highlight label="Highlight Hotspots" type="CheckBox" defaultValue="false"/>	<image type="group" label="Image">		<url label="File" type="media" placeholder="Select an image"/>		<textWidth label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="max,wide,narrow,none" defaultValue="narrow" width="200"/>		<tip label="Description" type="TextInput" placeholder="Enter a description for accessibility"/>	</image>	    <hidePanel label="Hide Panel" type="CheckBox" defaultValue="false" deprecated="This property is deprecated"/>    <hsAppearance type="group" label="Hotspot Appearance" optional="true" tooltip="Customise the appearance of the hotspots">        <hsStroke type="group" label="Stroke" optional="true" tooltip="Options relating to the line around the hotspot borders">            <hicol label="Colour" type="ColourPicker" optional="true" defaultValue="0xFFFF00" tooltip="The colour of the stroke line"/>            <hs_strokeOpacity label="Opacity" type="TextInput" optional="true" defaultValue="1" tooltip="The opacity (a decimal number between 0 and 1) of the stroke line"/>            <hs_strokeWidth label="Width" type="TextInput" optional="true" defaultValue="1" tooltip="The width of the stroke line" />        </hsStroke>        <hsFill type="group" label="Fill" optional="true" tooltip="Options relating to the hotspot backgrounds">            <hs_fill label="Fill Hotspot" type="CheckBox" optional="true" defaultValue="false" conditionTrigger="true" tooltip="Fill the hotspot with a background colour when hotspot is selected" />            <hs_fillColor label="Colour" type="ColourPicker" optional="true" defaultValue="0xFFFF00" condition="hs_fill=='true'" tooltip="The colour of the hotspot background"/>            <hs_fillOpacity label="Opacity" type="TextInput" optional="true" defaultValue="1" condition="hs_fill=='true'" tooltip="The opacity (a decimal number between 0 and 1) of hotspot background"/>        </hsFill>        <hs_showTooltip label="Show Tooltip" type="CheckBox" optional="true" defaultValue="true" tooltip="Show tooltip on hover. When checked, the label text is used as the hotspot tooltip"/>	</hsAppearance>    <hsIconAppearance type="group" label="Hotspot Icon Appearance" optional="true" tooltip="Customise the appearance of all hotspot.">    	<colour1 label="Main Colour" type="ColourPicker" defaultValue="" optional="true" />    	<colour2 label="Secondary Colour" type="ColourPicker" defaultValue="" optional="true" />    </hsIconAppearance>	<popUp type="group" label="Dialog Position" optional="true" tooltip="Control the position of the pop up window that appears when hotspot clicked">		<popUpVAlign label="Vertical" options="Top,Middle,Bottom" type="ComboBox" width="120" data="top,middle,bottom" defaultValue="middle" optional="true"/>		<popUpHAlign label="Horizontal" options="Left,Centre,Right" type="ComboBox" width="120" data="left,center,right" defaultValue="center" optional="true"/>	</popUp>	    <imageTransition label="Image Transition" options="Blinds,Dissolve,Fade,Fly,Iris,Squeeze,Wipe,Zoom" type="ComboBox" data="blinds,dissolve,fade,fly,iris,squeeze,wipe,zoom" defaultValue="wipe" width="100" optional="true" deprecated="This property is no longer required"/>    <newNodes>      <cHotspot><![CDATA[<cHotspot name="Tooltip Hotspot" showTitle="true" tooltip="false" iconCode="fas fa-info" windowType="dialog" hotspotHover='false' destination="Enter Destination Page ID" exitNav="all" text="Description for the hotspot" x="0" y="0" w="100" h="100" />]]></cHotspot>    </newNodes>  </connectorHotspotImage>  <!-- cHOTSPOT =============================================== -->  <cHotspot menuItem="Hotspot" label="Edit Hotspot" type="flexhotSpot" icon="icLayers" remove="true">  	<name label="Title" type="TextInput" wysiwyg="false"/>	<alttext label="Tooltip Description" type="script" height="100" defaultValue="" placeholder="Enter a description for accessibility" optional="true"/>	<showTitle label="Show Title" type="CheckBox" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotMovie!=null||hotspotPopUp!=null||(htm!=null&amp;&amp;htm!='')||iframe!=null" defaultValue="false" mandatory="true" tooltip="Include title when content is displayed in a dialog box"/>	<tooltip label="Show Title as Tooltip" type="CheckBox"/>	<windowType label="Display In" options="Dialog,Lightbox,Bubble" type="ComboBox" data="dialog,lightbox,bubble" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotPopUp!=null" defaultValue="dialog" mandatory="true" width="200"/>	<hotspotHover label="Display method" options="On click,On hover" type="ComboBox" data="false,true" condition="imageFile!=null||(hotspotSound!=null&amp;&amp;playerType!='auto')||hotspotPopUp!=null" defaultValue="false" width="200"/>    <iconCode label="Icon" type="FontAwesome" iconList="hotspot" defaultValue="fas fa-info" condition="mode=='icon'"/>	<hsIconAppearance type="group" label="Hotspot Icon Appearance" optional="true" tooltip="Customise the appearance of this hotspot. Any customisation set here will override customisation at page level.">		<colour1 label="Main Colour" type="ColourPicker" defaultValue="" optional="true"/>		<colour2 label="Secondary Colour" type="ColourPicker" defaultValue="" optional="true"/>	</hsIconAppearance>	<video type="group" label="Video" optional="true" tooltip="Show a video player when hotspot clicked">		<hotspotMovie label="File" type="media" conditionTrigger="true" optional="true" defaultValue="" placeholder="Select a video file or enter a URL/embed code"/>		<tip label="Description" type="TextInput" optional="true" defaultValue="" placeholder="Enter a description for accessibility"/>		<videoOpt type="group" label="Optional Video Properties" optional="true">		    <movieSize label="Video Size" type="TextInput" condition="hotspotMovie!=null" defaultValue="" placeholder="e.g. 320,240" optional="true" tooltip="By default videos will be scaled automatically to best fit on the page. This option fixes the video size (width,height). Use with caution!"/>            <videoTiming type="group" label="Start &amp; End Times" condition="hotspotMovie!=null" optional="true" tooltip="Play from &amp; stop at the times entered (in seconds). By default the whole video will play">                <startFrame label="Start Time" type="textInput" defaultValue="" optional="true"/>                <endFrame label="End Time" type="textInput" defaultValue="" optional="true"/>            </videoTiming>        </videoOpt>	</video>    <reset label="Video Reset at End" type="Checkbox" defaultValue="false" optional="true" deprecated="This property is deprecated. Videos now reset on completion by default."/>	<sound type="group" label="Sound" optional="true" tooltip="Show an audio player (or play a sound automatically) when hotspot clicked">		<hotspotSound label="File" type="media" conditionTrigger="true" optional="true" defaultValue="" placeholder="Select an audio file"/>		<playerType label="Type" options="Audio Player,Auto-Play" type="ComboBox" conditionTrigger="true" data="player,auto" defaultValue="player" width="200" optional="true"/>		<soundTranscript label="Transcript" type="textArea" height="100" defaultValue="" condition="playerType!='auto'" optional="true" tooltip="A transcript button will appear on the audio player when text is added here"/>		<soundOpt type="group" label="Optional Sound Properties" optional="true">            <soundStart label="Start Time" type="textInput" defaultValue="" optional="true" tooltip="Play from the time entered (in seconds). By default the audio file will play from the beginning"/>            <soundEnd label="End Time" type="textInput" defaultValue="" optional="true" tooltip="Play until the time entered (in seconds). By default the audio file will play until the end"/>        </soundOpt>	</sound>		<imgGroup type="group" label="Image" optional="true" tooltip="Show an image when hotspot clicked">		<imageFile label="File" type="media" conditionTrigger="true" optional="true" defaultValue="" placeholder="Select an image"/>		<imageTip label="Description" type="TextInput" defaultValue="" placeholder="Enter a description for accessibility" optional="true"/>		<imageCaption label="Caption" type="textInput" optional="true" defaultValue="" wysiwyg="true" placeholder="Enter the caption text" tooltip="Optional: add a caption below the image"/>	</imgGroup>	<hotspotPopUp label="Text" type="TextArea" conditionTrigger="true" height="200" optional="true" tooltip="Show text/HTML when hotspot clicked"/>	<iframe label="iframe" type="TextInput" conditionTrigger="true" height="200" optional="true" tooltip="Show URL in an iframe when hotspot clicked"/>		<window type="group" label="New Window" optional="true" tooltip="Open a website (or custom HTML) in a new browser window when hotspot clicked">		<windowURL label="URL" type="TextInput" optional="true" tooltip="URL to open in the new window (HTML field must be blank when using this option)"/>		<htm label="HTML" type="TextArea" conditionTrigger="true" height="150" optional="true" tooltip="HTML content to open in the new window"/>		<windowWidth label="Width" type="NumericStepper" min="100" max="1030" step="10" defaultValue="550" width="100" optional="true"/>		<windowHeight label="Height" type="NumericStepper" min="100" max="1030" step="10" defaultValue="400" width="100" optional="true"/>	</window>	<externalURLGroup type="group" label="External URL" optional="true" tooltip="Open an external website when the hotspot is clicked.">        <destinationURL label="External URL" type="TextInput" optional="true" tooltip="The destination url"/>        <destinationType label="Type" options="New tab, Current page" type="ComboBox" data="tab,current" defaultValue="tab" width="200" optional="true" tooltip="If current page is selected the browser will navigate away from this project"/>	</externalURLGroup>	<destination label="Destination Page" type="pageList" defaultValue="" optional="true" tooltip="Go to another page in this project when hotspot clicked"/>	<relNav label="Relative Destination Page" options="First Page,Previous Page,Next Page,Last Page" type="ComboBox" data="first,prev,next,last" defaultValue="next" width="200" optional="true" tooltip="Go to a relative page (i.e. next)" deprecated="This property is deprecated. You can now select a relative destination in the Destination Page optional property."/>	  </cHotspot></wizard>