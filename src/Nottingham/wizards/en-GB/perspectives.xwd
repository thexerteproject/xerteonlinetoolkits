<wizard menus="Navigators">  <pageWizard remove="true" duplicate="false">    <newNodes>	  <perspectives><![CDATA[<perspectives name="Enter Page Title" backBtnTip="Scroll Back" nextBtnTip="Scroll Forward" videoTip="Video Clip" soundTip="Sound Clip" backGrid="Back" playTip="Play All"/>]]></perspectives>	</newNodes>    </pageWizard>        <!-- MULTIPLE PERSPECTIVES PAGE===================================== -->  <perspectives menu="Navigators" menuItem="Multiple Perspectives"  hint="View and compare multiple video and sound clips alongside related text." icon="icUser" thumb="thumbs/perspectives.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#multipleperspectives" remove="true" deepLink="true">    <name label="Page Title" type="TextInput" wysiwyg="true" />    <backBtnTip label="Scroll Back Tip" type="TextInput" wysiwyg="true" language="true" />    <nextBtnTip label="Scroll Forward Tip" type="TextInput" wysiwyg="true" language="true" />    <videoTip label="Generic Video Tip" type="TextInput" wysiwyg="true" language="true" />    <soundTip label="Generic Sound Tip" type="TextInput" wysiwyg="true" language="true" />	<backGrid label="Back Button Text" type="TextInput" wysiwyg="true" language="true" />	<playTip label="Play All Text" type="TextInput" wysiwyg="true" language="true" />		<thumbs type="group" label="Thumbnail Bar" optional="true">		<thumbPos label="Position" type="ComboBox" options="Top,Bottom,Grid" data="top,bottom,grid" defaultValue="top" width="200" optional="true"/>		<thumbH label="Height" type="ComboBox" options="Small,Medium,Large" data="small,medium,large" defaultValue="medium" width="200" optional="true"/>		<thumbType label="Type" type="ComboBox" options="Image and Caption,Image and Number,Image Only" data="both,imgNum,image" defaultValue="both" width="200" optional="true"/>		<thumbBorder label="Border" type="Checkbox" defaultValue="true" optional="true"/>		<highlight label="Highlight Current" type="Checkbox" defaultValue="false" optional="true"/>		<highlightCol label="Highlight Colour" type="ColourPicker" optional="true"/>	</thumbs>		<play type="group" label="Play All" optional="true">		<playAll label="Include Play All Button" type="Checkbox" defaultValue="true" optional="true"/>		<playImgTime label="Image Play Time" type="NumericStepper" min="1" max="60" step="1" defaultValue="5" optional="true"/>	</play>    <newNodes>      <movie><![CDATA[<movie txt="Enter text for the page here" src="Select a Video" name="Video" mediaW="Medium" align="Right"></movie>]]></movie>      <sound><![CDATA[<sound txt="Enter text for the page here" src="Select a Sound" name="Sound" mediaW="Medium" align="Right"></sound>]]></sound>      <image><![CDATA[<image txt="Enter text for the page here" src="Select an Image" name="Image" tooltip="Enter a Description for Accessibility" mediaW="Medium" align="Right"></image>]]></image>	      </newNodes>  </perspectives>  <movie menuItem="Video" icon="icPageWhiteFilm" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true" />    <txt label="Text" type="TextArea" height="300" />	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>		<video type="group" label="Video">		<src label="File" type="media" />		<mediaW label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>	</video>		<movieSize label="Fixed Video Size" type="textInput" defaultValue="320,240" optional="true"/>    <tooltip label="Description" type="TextInput" optional="true" defaultValue="Enter a Description for Accessibility"/>		<thumbnail type="group" label="Thumbnail" optional="true" tooltip="Customise how the video is shown on the thumbnail bar. By default videos will use a generic video icon.">		<useVidThumb label="Use 1st Frame" type="Checkbox" defaultValue="true" optional="true" tooltip="Use the first frame of the video as the thumbnail image"/>		<img label="Image" type="media" optional="true" tooltip="Upload an image to use in the thumbnail bar. Note: uploaded images will override the 'Use 1st Frame' option."/>	</thumbnail>		<linkInfo type="group" label="Page Link" optional="true">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="Enter Text for Link" optional="true"/>	</linkInfo>  </movie>  <sound menuItem="Sound" icon="icSound" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true" />    <txt label="Text" type="TextArea" height="300" />	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>    <src label="Sound" type="media" />	<mediaW label="Image Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>		<imgInfo type="group" label="Image" optional="true" tooltip="Customise the image accompanying the audio player. By default it will use a generic audio icon.">		<img label="Image" type="media"  optional="true" defaultValue="Select an Image" />		<tooltip label="Description" type="TextInput" optional="true" defaultValue="Enter a Description for Accessibility"/>	</imgInfo>		<linkInfo type="group" label="Page Link" optional="true">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="Enter Text for Link" optional="true"/>	</linkInfo>  </sound>  <image menuItem="Image" icon="icImage" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true"/>    <txt label="Text" type="TextArea" height="300"/>	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>		<imageGroup type="group" label="Image">		<src label="File" type="media"/>		<tooltip label="Description" type="TextInput"/>		<mediaW label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>	</imageGroup>		<linkInfo type="group" label="Page Link" optional="true">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="Enter Text for Link" optional="true"/>	</linkInfo>  </image>    </wizard>