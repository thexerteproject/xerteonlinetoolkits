<wizard menus="Navigators">  <pageWizard remove="true" duplicate="false">    <newNodes>	  <perspectives><![CDATA[<perspectives name="Enter Page Title" thumbH="small" backBtnTip="Scroll Back" nextBtnTip="Scroll Forward" videoTip="Video Clip" soundTip="Sound Clip" backGrid="Back" playTip="Play All"/>]]></perspectives>	</newNodes>    </pageWizard>        <!-- MULTIPLE PERSPECTIVES PAGE===================================== -->  <perspectives menu="Navigators" menuItem="Multiple Perspectives"  hint="View and compare multiple video and sound clips alongside related text." icon="icUser" thumb="thumbs/perspectives.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#multipleperspectives" wiki="https://xerte.org.uk/wiki/doku.php?id=navigator_multiple_perpectives_page" remove="true" deepLink="true">    <name label="Page Title" type="TextInput" wysiwyg="true" />    <thumbH label="Thumbnail Size" type="ComboBox" options="Small,Medium,Large" data="small,medium,large" defaultValue="medium" mandatory="true"/>    <backBtnTip label="Scroll Back Tip" type="TextInput" language="true" />    <nextBtnTip label="Scroll Forward Tip" type="TextInput" language="true" />    <videoTip label="Generic Video Tip" type="TextInput" language="true" />    <soundTip label="Generic Sound Tip" type="TextInput" language="true" />	<backGrid label="Back Button Text" type="TextInput" wysiwyg="true" language="true" />	<playTip label="Play All Text" type="TextInput" wysiwyg="true" language="true" />		<thumbs type="group" label="Thumbnail Bar" optional="true">		<thumbPos label="Position" type="ComboBox" options="Top,Bottom,Grid" data="top,bottom,grid" conditionTrigger="true" defaultValue="top" width="200" optional="true"/>		<target label="Display In" type="ComboBox" data="page,lightbox" options="Page,Lightbox" defaultValue="page" conditionTrigger="true" condition="thumbPos=='grid'" optional="true" mandatory="true" tooltip="When the thumbnails are shown in a grid, select whether the information is shown in the main page or in a lightbox"/>		<thumbType label="Type" type="ComboBox" options="Image and Caption,Image and Number,Image Only" data="both,imgNum,image" defaultValue="both" width="200" optional="true"/>		<thumbBorder label="Border" type="Checkbox" defaultValue="true" optional="true"/>		<highlight label="Highlight Current" type="Checkbox" defaultValue="false" optional="true"/>		<highlightCol label="Highlight Colour" type="ColourPicker" optional="true"/>	</thumbs>		<play type="group" label="Play All" optional="true">		<playAll label="Include Play All Button" type="Checkbox" defaultValue="true" optional="true" condition="thumbPos!='grid'||target!='lightbox'"/>		<playImgTime label="Image Play Time" type="NumericStepper" min="1" max="60" step="1" defaultValue="5" optional="true" condition="thumbPos!='grid'||target!='lightbox'"/>	</play>	<trackingWeight label="Tracking Score Weight" optional="true" type="textInput" width="120" defaultValue="1.0" tooltip="Customise the weight of the task on this page, relative to other scored pages in the project. Setting the weight to 0 will mean that the task on this page will not contribute to the project's overall score." />    <newNodes>	  <movie><![CDATA[<movie txt="" src="" name="Video" mediaW="Medium" align="Right"></movie>]]></movie>      <sound><![CDATA[<sound txt="" src="" name="Sound" mediaW="Medium" align="Right"></sound>]]></sound>      <image><![CDATA[<image txt="" src="" name="Image" tooltip="" mediaW="Medium" align="Right"></image>]]></image>	  <mpText><![CDATA[<mpText txt="" name="Text" src="" tooltip=""></mpText>]]></mpText>    </newNodes>  </perspectives>  <mpText menuItem="Text" icon="icPageWhiteText" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true" />    <txt label="Text" type="TextArea" height="300" placeholder="Enter text for the page here"/>		<thumbnail type="group" label="Thumbnail" tooltip="The image that will appear on the thumbnail bar for this item.">		<src label="Image" type="media" defaultValue="" placeholder="Select an image" />		<tooltip label="Description" type="TextInput" defaultValue="" placeholder="Enter a description for accessibility"/>	</thumbnail>		<linkInfo type="group" label="Page Link" optional="true" tooltip="Include a Xerte page link after the text for this item">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="" tooltip="By default, the page title will be used as the page link text. Any text entered here will be used instead." optional="true"/>	</linkInfo>  </mpText>  <movie menuItem="Video" icon="icPageWhiteFilm" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true" />    <txt label="Text" type="TextArea" height="300" placeholder="Enter text for the page here" />	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>		<video type="group" label="Video">		<src label="File" type="media" placeholder="Select a video file or enter a URL/embed code"/>		<mediaW label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>	    <trackinglabel label="Tracking label" type="TextInput" optional="true" defaultValue="" wysiwyg="false" />	</video>		<movieSize label="Video Size" type="textInput" defaultValue="" placeholder="e.g. 320,240" optional="true" tooltip="By default videos will be scaled automatically to best fit on the page. This option fixes the video size (width,height). Use with caution!"/>    <tooltip label="Description" type="TextInput" optional="true" defaultValue="" placeholder="Enter a description for accessibility"/>		<thumbnail type="group" label="Thumbnail" optional="true" tooltip="Customise how the video is shown on the thumbnail bar. By default videos will use a generic video icon.">		<useVidThumb label="Use 1st Frame" type="Checkbox" defaultValue="true" optional="true" tooltip="Use the first frame of the video as the thumbnail image"/>		<img label="Image" type="media" placeholder="Select an image" optional="true" tooltip="Upload an image to use in the thumbnail bar. Note: uploaded images will override the 'Use 1st Frame' option."/>	</thumbnail>		<linkInfo type="group" label="Page Link" optional="true" tooltip="Include a Xerte page link after the text for this item">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="" tooltip="By default, the page title will be used as the page link text. Any text entered here will be used instead." optional="true"/>	</linkInfo>  </movie>  <sound menuItem="Sound" icon="icSound" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true" />    <txt label="Text" type="TextArea" height="300" placeholder="Enter text for the page here" />	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>    <src label="Sound" type="media" placeholder="Select an audio file"/>	<mediaW label="Image Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>		<imgInfo type="group" label="Image" optional="true" tooltip="Customise the image accompanying the audio player. By default it will use a generic audio icon.">		<img label="Image" type="media"  optional="true" defaultValue="" placeholder="Select an image" />		<tooltip label="Description" type="TextInput" optional="true" defaultValue="" placeholder="Enter a description for accessibility"/>	</imgInfo>		<linkInfo type="group" label="Page Link" optional="true" tooltip="Include a Xerte page link after the text for this item">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="" tooltip="By default, the page title will be used as the page link text. Any text entered here will be used instead." optional="true"/>	</linkInfo>		<transcript label="Transcript" type="textArea" height="100" defaultValue="" optional="true" tooltip="A transcript button will appear on the audio player when text is added here"/>  </sound>  <image menuItem="Image" icon="icImage" duplicate="true" remove="true">    <name label="Title" type="TextInput" wysiwyg="true"/>    <txt label="Text" type="TextArea" height="300" placeholder="Enter text for the page here"/>	<align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox" data="Left,Right,Top,Bottom" defaultValue="Right" width="100"/>		<imageGroup type="group" label="Image">		<src label="File" type="media" placeholder="Select an image"/>		<tooltip label="Description" type="TextInput" placeholder="Enter a description for accessibility"/>		<mediaW label="Size" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>	</imageGroup>		<linkInfo type="group" label="Page Link" optional="true" tooltip="Include a Xerte page link after the text for this item">		<pageLink label="Page" type="pageList" optional="true"/>		<pageLinkTxt label="Text" type="textInput" wysiwyg="true" defaultValue="" tooltip="By default, the page title will be used as the page link text. Any text entered here will be used instead." optional="true"/>	</linkInfo>  </image>    </wizard>