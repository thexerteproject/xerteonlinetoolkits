<wizard menus="Media">  <pageWizard remove="true" duplicate="false">    <newNodes>          <textVideo><![CDATA[<textVideo name="Enter Page Title" align="Left" url="" tip="" full="false" transcriptTabTxt="Transcript" ></textVideo>]]></textVideo>    </newNodes>  	    </pageWizard>  <!-- TEXT VIDEO============================================= -->  <textVideo menu="Media" menuItem="Video" hint="Embed MP4 video files in your project." label="Page Text" condition="full!='true'" placeholder="Enter text for the page here" icon="icPageWhiteFilm" thumb="thumbs/textVideo.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#video" wiki="https://xerte.org.uk/wiki/doku.php?id=media_video_page" type="text" height="180" remove="true">    <name label="Page Title" type="TextInput" wysiwyg="true" />    <align label="Align Text" options="Left,Right,Top,Bottom" type="ComboBox"  data="Left,Right,Top,Bottom" defaultValue="Left" condition="full!='true'" width="100"/>		<video type="group" label="Video">		<url label="File" type="media" placeholder="Select a video file or enter a URL/embed code" />		<tip label="Description" type="TextInput" placeholder="Enter a Description for Accessibility" />        <full label="Full Screen" type="CheckBox" defaultValue="false" conditionTrigger="true" mandatory="true" placeholder="Show video full screen with no page text" />	</video>	    <reset label="Reset on Completion" type="Checkbox" defaultValue="false" deprecated="This property is deprecated. Videos now reset on completion by default."/>	    <transcriptTabTxt label="Transcript Button Label" type="TextInput" wysiwyg="true" divider="true" language="true" />    <transcriptTabTip label="Check Button Tip" type="textInput" language="true" deprecated="This property is no longer required"/>	    <transcriptTabWidth label="Check Button Width" type="NumericStepper" min="80" max="150" step="10" width="100" defaultValue="90" language="true" deprecated="Width is now set automatically"/>		    <startFrame label="Start Time" type="textInput" defaultValue="0" optional="true" tooltip="Enter the start frame in seconds"/>    <endFrame label="End Time" type="textInput" defaultValue="0" optional="true" tooltip="Enter the end frame in seconds"/>    <movieSize label="Maximum Size" type="textInput" defaultValue="" placeholder="e.g. 320,240" conditionTrigger="true" condition="full!='true'" optional="true" tooltip="By default videos will be scaled automatically to best fit on the page. This option sets the maximum video size in pixels (width,height)."/>    <iframeMax label="Maximum Relative Width" type="TextInput" defaultValue="" placeholder="0.6" condition="full!='true'" tooltip="The maximum width of the video in relation to the width of the whole page. Enter a number between 0.1 and 1. Default value is 0.6 (60% of page width)" optional="true" />    <iframeRatio label="Aspect Ratio" type="TextInput" defaultValue="" placeholder="16:9" tooltip="Aspect ratio of video, e.g. 16:9" condition="movieSize==null" optional="true" />    <transcript label="Transcript" type="textArea" height="150" condition="full!='true'" optional="true"/>	<trackingWeight label="Tracking Score Weight" optional="true" type="textInput" width="120" defaultValue="1.0" tooltip="Customise the weight of the task on this page, relative to other scored pages in the project. Setting the weight to 0 will mean that the task on this page will not contribute to the project's overall score." />  </textVideo></wizard>