<wizard menus="Media">
  <pageWizard remove="true" duplicate="false">
    <newNodes>
      <flickr><![CDATA[<flickr name="Enter Page Title" keywords="" content="all use" deriv="unrestricted" panelWidth="Medium" nextTipTxt="Next Image" priorTipTxt="Previous Image" imageTxt="Image {i} of {n} images" ></flickr>]]></flickr>
    </newNodes>
  </pageWizard>

  <!-- FLICKR SLIDESHOW=============================== -->
  <flickr menu="Media" menuItem="Flickr Slideshow" hint="Include freely available graphical content from the Flickr photo sharing service." label="Page Text" placeholder="Enter text for the page here" type="text" height="150" icon="icPicture" thumb="thumbs/flickr.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#flickrslideshow" wiki="https://xerte.org.uk/wiki/doku.php?id=media_flickr_slideshow_page" remove="true">

    <name label="Page Title" type="TextInput" wysiwyg="true"/>
    <keywords label="Keyword(s)" type="TextInput" placeholder="Enter keywords to search for here"/>
    <content label="Content for" options="All use,Non-commercial use" type="comboBox" data="all use,non-commercial use" defaultValue="all use" width="150"/>
    <deriv label="Reuse" options="Unrestricted,Non-derivative,Share alike" type="comboBox" data="unrestricted,non-derivative,share alike" defaultValue="unrestricted" width="150"/>
	<panelWidth label="Panel Width" options="Small,Medium,Large,Full" type="ComboBox"  data="Small,Medium,Large,Full" defaultValue="Medium" width="100" mandatory="true"/>

	<nextTipTxt label="Next Button Tooltip" type="TextInput" divider="true" language="true"/>	
	<priorTipTxt label="Prior Button Tooltip" type="TextInput" language="true"/>	
	<loadingTxt label="Loading Message" type="TextInput" wysiwyg="true" language="true" deprecated="This property is no longer required"/>
    <imageTxt label="Image {i} of {n} images" type="TextInput" wysiwyg="true" language="true" />

    <AIGroup type="group" label="AI" optional="true" lightbox="form" condition="hasrole('aiuser')">
         <aiSelector label="AI model" type="comboBox_ai" defaultValue="openai" width="120" conditionTrigger="true" optional="true"/>
         <template label="Template" options="Custom,Image Alt. Text" type="comboBox" data="custom,altText" defaultValue="custom" width="120" conditionTrigger="true" condition="aiSelector=='openai'" optional="true"/>
         <subject verification="^.+$"  label="Subject" type="TextInput" defaultValue="" placeholder="Enter a subject here..." tooltip="This determines which area or subject the generated words will follow." optional="true" condition="template=='custom'"/>
         <useContext label="Generate Based on Context" type="checkbox" defaultValue="false" tooltip="When selected, the AI model will also take into account the current contents of the learning object when generating this object." optional="true" condition="template=='custom' &amp;&amp; aiSelector=='openai'"/>
         <additionalInstructions label="Additional Instructions" type="text" tooltip="Provide any additional instructions here. For example: create a summary, generate content in the form of a list, use only chapter 3 from the uploaded file. It is also possible to ask questions. For example: 1. Write a summary of the final results of the experiment 2. Specify how they tested their findings. Finally, additional instructions can be targeted and interact with example content. For example, you can copy an interesting paragraph or point into the example content, and then ask to: make the example content more concise, expand on the example content, add more specific examples to the content, add points which are only relevant for teachers in the Netherlands/Flanders, and so on." wysiwyg="true" optional="true" defaultValue="Provide a brief summary on the given subject." condition="template=='custom'"/>
         <exampleContent label="Example Content (Optional)" type="text" tooltip="Optionally, provide an example of the kind of content you expect as an output. The model will then attempt to generate a similar output, or follow the additional instructions on how to handle or extrapolate on this output." wysiwyg="true" optional="true" condition="template=='custom'"/>
         <range label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the complexity of the language. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." defaultValuePH="Intermediate English B2" placeholder="Enter reading level. Defaults to 'Intermediate English, B2'" condition="template=='custom'" optional="true"/>
         <eduLevel label="Education Level" type="TextInput" tooltip="The education level for which the content is intended. Examples: University students, HBO students in the Netherlands, Middle school students who already have learned the basics, etc." condition="template=='custom'"  defaultValuePH="University" placeholder="Enter educational level. Defaults to 'University.'" optional="true"/>
         <tone label="Tone and Style" type="TextInput" defaultValuePH="Semi-formal" placeholder="Enter an indicator of tone. Defaults to 'Semi-formal.'" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." optional="true"/>
         <uploadPrompt label="Information Source" options="None (uses model base knowledge), Submit Snippet, Upload File" type="comboBox" data="false,trueText,true" defaultValue="false" tooltip="Select 'Submit Snippet' when you wish for the model to use the provided text as a source, 'Upload File' when you wish to upload a file or when using a video or audio link as a source. Please ensure the uploaded file or provided snippet corresponds to the requested subject. If relevant information is not found in the snippet or file, the AI will attempt to supplement with its own knowledge." conditionTrigger="true" condition="template=='custom' &amp;&amp; aiSelector=='openai'" optional="true"/>
         <textSnippet label="Text Snippet" type="text" tooltip="Provide the text snippet you wish the model to use as a source for generating the interactivity." condition="uploadPrompt=='trueText' &amp;&amp; template=='custom'" optional="true"/>
         <file label="File" type="media" defaultValue="Upload a file or enter a video link here..." tooltip="Select a video, audio, powerpoint, PDF or other text file to be used for content generation." condition="uploadPrompt=='true' || template=='altText'" optional="true"/>
         <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" condition="uploadPrompt=='true' &amp;&amp; template=='custom'" optional ="true"/>
         <aiButton type="aibutton" optional="true"/>
         <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>
    </AIGroup>

  </flickr>


</wizard>