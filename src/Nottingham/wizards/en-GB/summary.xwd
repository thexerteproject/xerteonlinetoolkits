<wizard menus="Text">  <pageWizard remove="true" duplicate="false">    <newNodes>        <summary><![CDATA[<summary name="Enter Page Title" summaryHeader="Summary" summary="" nextstepsHeader="Next Steps" nextsteps=""/>]]></summary>    </newNodes>  </pageWizard>  <!-- SUMMARY PAGE======================================== -->  <summary menu="Text" menuItem="Summary" hint="A page for summarising key points and suggesting next steps." icon="icPageWhiteInfo" remove="true" thumb="thumbs/summary.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#summary" wiki="https://xerte.org.uk/wiki/doku.php?id=text_summary_page">    <name label="Page Title" type="TextInput" wysiwyg="true" />		<summaryGroup type="group" label="Summary">		<summaryHeader label="Header" type="TextInput" wysiwyg="true" />		<summary label="Text" type="TextArea" height="100" placeholder="Summarise the key points" />	</summaryGroup>		<nextstepsGroup type="group" label="Next steps">		<nextstepsHeader label="Header" type="TextInput" wysiwyg="true" />		<nextsteps label="Text" type="TextArea" height="100" placeholder="Suggest how the knowledge can be applied and any useful next steps"/>	</nextstepsGroup>    <media type="group" label="Media" optional="true" tooltip="Add an image, video or audio player to the page">        <url label="File" type="media" placeholder="Select a file" optional="true" tooltip="Upload an image, audio or video file, or paste in an embed code or YouTube/Vimeo URL"/>        <tip label="Description" type="TextInput" placeholder="Enter a description for accessibility" optional="true" />        <audioGroup type="group" label="Additional options (audio only)" optional="true">            <audioImg label="Image file" type="media" placeholder="Select a file" optional="true" tooltip="Upload an image that will be shown above the audio player"/>            <audioTranscript label="Transcript" type="textArea" height="100" defaultValue="" optional="true" tooltip="When text is added here, a transcript button will appear on the audio player"/>        </audioGroup>    </media>    <AIGroup type="group" label="AI" tooltip ="Automatically summarize a text or uploaded file using AI." optional="true" lightbox="form" condition="hasrole('aiuser')">        <aiSelector label="AI model" type="comboBox_ai" defaultValue="openai" width="120" conditionTrigger="true" optional="true"/>    	<template label="Summary Options" options="Summarize Learning Object" type="comboBox" data="lo" defaultValue="lo" width="120" conditionTrigger="true" optional="true"/>        <subject verification="^.+$"  label="Summary Focus (Optional)" type="TextInput" wysiwyg="true" tooltip = "Specify the part of the lo, text or uploaded file you wish to summarise. For example, 'summarize chapter 7' would limit the summary to said chapter; 'Summarize only topics related to bird migration' would ignore the other parts of the uploaded document, etc." conditionTrigger="true" defaultValue="General summary" optional="true"/>        <range label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the complexity of the language. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." defaultValuePH="Intermediate English B2" placeholder="Enter reading level. Defaults to 'Intermediate English, B2'" optional="true"/>        <eduLevel label="Education Level" type="TextInput" tooltip="The education level for which the content is intended. Examples: University students, HBO students in the Netherlands, Middle school students who already have learned the basics, etc." defaultValuePH="University" placeholder="Enter educational level. Defaults to 'University.'" optional="true"/>        <tone label="Tone and Style" type="TextInput" defaultValue="" placeholder="Enter an indicator of tone. Defaults to 'Semi-formal.'" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." optional="true"/>        <sourceText label="Text" type="text" tooltip="Copy the text you wish to summarize here. For larger amounts of text, please upload a file." wysiwyg="true" defaultValue="Enter the text you wish to summarize here..." condition="template=='text'" optional="true"/>        <file label="File" type="media" defaultValue="Upload a file or enter a video link here..." tooltip = "Select a video, audio, powerpoint, PDF or other text file you wish to summarize. Please ensure the uploaded file corresponds to the requested subject. If relevant information is not found in the file, the AI will attempt to supplement with its own knowledge, which may lead to generated (made-up) content, instead of a proper summary." condition="template=='file'" optional="true"/>        <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" condition="template=='file'" optional ="true"/>        <aiButton type="aibutton" optional="true"/>        <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>    </AIGroup>  </summary></wizard>