<wizard menus="Text">  <pageWizard remove="true" duplicate="false">    <newNodes>        <summary><![CDATA[<summary name="Enter Page Title" summaryHeader="Summary" summary="" nextstepsHeader="Next Steps" nextsteps=""/>]]></summary>    </newNodes>  </pageWizard>  <!-- SUMMARY PAGE======================================== -->  <summary menu="Text" menuItem="Summary" hint="A page for summarising key points and suggesting next steps." icon="icPageWhiteInfo" remove="true" thumb="thumbs/summary.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#summary" wiki="https://xerte.org.uk/wiki/doku.php?id=text_summary_page">    <name label="Page Title" type="TextInput" wysiwyg="true" />		<summaryGroup type="group" label="Summary">		<summaryHeader label="Header" type="TextInput" wysiwyg="true" />		<summary label="Text" type="TextArea" height="100" placeholder="Summarise the key points" />	</summaryGroup>		<nextstepsGroup type="group" label="Next steps">		<nextstepsHeader label="Header" type="TextInput" wysiwyg="true" />		<nextsteps label="Text" type="TextArea" height="100" placeholder="Suggest how the knowledge can be applied and any useful next steps"/>	</nextstepsGroup>    <media type="group" label="Media" optional="true" tooltip="Add an image, video or audio player to the page">        <url label="File" type="media" placeholder="Select a file" optional="true" tooltip="Upload an image, audio or video file, or paste in an embed code or YouTube/Vimeo URL"/>        <tip label="Description" type="TextInput" placeholder="Enter a description for accessibility" optional="true" />        <audioGroup type="group" label="Additional options (audio only)" optional="true">            <audioImg label="Image file" type="media" placeholder="Select a file" optional="true" tooltip="Upload an image that will be shown above the audio player"/>            <audioTranscript label="Transcript" type="textArea" height="100" defaultValue="" optional="true" tooltip="When text is added here, a transcript button will appear on the audio player"/>        </audioGroup>    </media>  </summary></wizard>