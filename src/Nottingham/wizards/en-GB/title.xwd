<wizard menus="Text">  <pageWizard remove="true" duplicate="false">    <newNodes>        <title><![CDATA[<title name="Enter Page Title" size="30">Enter title here</title>]]></title>     </newNodes>  </pageWizard>  <!-- TITLE PAGE ============================== -->  <title menu="Text" menuItem="Title Page" hint="A simple page for displaying a title." label="Title Text" icon="icTitle" thumb="thumbs/title.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#xertepagetypes" type="text" height="100" remove="true">    <name label="Page Title" type="TextInput" wysiwyg="true"/>    <size label="Text Size" options="20,24,30,36,40,48,70" type="ComboBox" data="20,24,30,36,40,48,70" defaultValue="30" width="100"/> 		<background type="group" label="Background" optional="true" tooltip="Add a background image to this page">		<bgImageVAlign label="Vert Align" options="Top,Middle,Bottom" type="ComboBox" width="120"  data="top,middle,bottom" defaultValue="middle" optional="true"/>		<bgImageHAlign label="Horiz Align" options="Left,Centre,Right" type="ComboBox" width="120" data="left,centre,right" defaultValue="centre" optional="true"/>		<bgImageVConstrain label="Max Height" type="NumericStepper" min="0" max="500" step="10" defaultValue="" optional="true"/>		<bgImageHConstrain label="Max Width" type="NumericStepper" min="0" max="800" step="10" defaultValue="" optional="true"/>	</background>		<align type="group" label="Title Alignment" optional="true" tooltip="The position of the title on the page">		<titleVAlign label="Vertical" options="Top,Middle,Bottom" type="ComboBox" width="120" data="20,200,400" defaultValue="200" optional="true"/>		<titleHAlign label="Horizontal" options="Left,Centre,Right" type="ComboBox" width="120" data="left,center,right" defaultValue="center" optional="true"/>	</align>	    <titleTextColour label="Title Text Colour" type="ColourPicker" defaultValue="0x016A71" optional="true" deprecated="This property is deprecated. You can change the title's colour in the text toolbar."/>		<hideTitles type="group" label="Hide Header" optional="true" tooltip="Hide the page and project titles at the top of this page">		<hideTitleTxt label="Hide Titles" type="Checkbox" defaultValue="true" optional="true"/>		<hideIcon label="Hide Icon/Logo" type="Checkbox" defaultValue="true" optional="true"/>	</hideTitles>  </title></wizard>