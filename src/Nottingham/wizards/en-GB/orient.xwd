<wizard menus="Text">  <pageWizard remove="true" duplicate="false">    <newNodes>      <orient><![CDATA[<orient name="Enter Page Title" goalsHeader="Aims and Objectives" goals="Outline the goals for this content"	  audienceHeader="Target Audience" audience="Describe the target audience"	  prereqHeader="Pre-requisites" prereq="State any pre-requisite knowledge or experience"	  howtoHeader="How to use this resource" howto="Describe how the user can best use the resource"/>]]></orient>    </newNodes>    </pageWizard>    <!-- ORIENTATION PAGE=========================================== -->  <orient menu="Text" menuItem="Orientation" hint="A page for orienting users before they begin working with the content." icon="icPageWhiteQuestion" remove="true" thumb="thumbs/orient.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#orientation" wiki="https://xerte.org.uk/wiki/doku.php?id=text_orientation_page">    <name label="Page Title" type="TextInput" wysiwyg="true" />		<goalGroup type="group" label="Goals">		<goalsHeader label="Header" type="TextInput" wysiwyg="true" />		<goals label="Text" type="TextArea" height="100" />	</goalGroup>		<audienceGroup type="group" label="Audience">		<audienceHeader label="Header" type="TextInput" wysiwyg="true" />		<audience label="Text" type="TextArea" height="100" />	</audienceGroup>		<prereqGroup type="group" label="Pre-requisites">		<prereqHeader label="Header" type="TextInput" wysiwyg="true" />		<prereq label="Text" type="TextArea" height="100" />	</prereqGroup>		<howtoGroup type="group" label="How to use this resource">		<howtoHeader label="Header" type="TextInput" wysiwyg="true" />		<howto label="Text" type="TextArea" height="100" />	</howtoGroup>	<AIGroup type="group" label="AI" tooltip ="Automatically summarize a text or uploaded file using AI." optional="true">        	<aiSelector label="AI model" options="OpenAI,Claude" type="comboBox" data="openai,copilot" defaultValue="openai" width="120" optional="true"/>            <additionalInstructions label="Instructions" type="text" wysiwyg="true" tooltip = "Instruct the model on how you wish for the orientation page to look like. For example: 'Base it on only the x, y and z sections', 'keep the goals section short', 'make sure the target audience covers students, teachers and administrative personnel' and so on." optional="true"/>            <ageRange label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the content. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." wysiwyg="true" optional="true"/>            <voiceSelector label="Tone and Style" type="TextInput" wysiwyg="true" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." optional="true"/>            <uploadPrompt label="Upload file?" type="checkbox" defaultValue="false" tooltip="Check to upload a file or when using a video or audio link as a source. Please ensure the uploaded file corresponds to the requested subject. If relevant information is not found in the file, the AI will attempt to supplement with its own knowledge, which may lead to generated (made-up) content, instead of a proper summary." conditionTrigger="true" optional ="true"/>            <file label="File" type="media" defaultValue="Upload a file" tooltip = "Select a video, audio, powerpoint, PDF or other text file to be used for content generation." condition="uploadPrompt=='true'" optional="true"/>            <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" condition="uploadPrompt=='true'" optional ="true"/>            <aiButton type="aibutton" optional="true"/>            <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>        </AIGroup>  </orient>      </wizard>