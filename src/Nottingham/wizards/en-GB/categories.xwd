<wizard menus="Interactivity">
  <pageWizard remove="true" duplicate="false">
    <newNodes>
      <categories><![CDATA[<categories name="Enter Page Title" text="" feedback="" buttonLabel="Check Answers" feedbackScore="You have placed {i} out of {n} labels correctly" incomplete="Complete the exercise."/>]]></categories>
    </newNodes>
  </pageWizard>

  <!-- CATEGORIES INTERACTION========================= -->
  <categories menu="Interactivity" menuItem="Categories" hint="An interaction allowing the user to sort items into a number of categories." icon="icLayers" remove="true" thumb="thumbs/categories.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#categories" wiki="https://xerte.org.uk/wiki/doku.php?id=interactivity_categories_page" >

    <name label="Page Title" type="TextInput" wysiwyg="true" />
    <text label="Page Text" type="TextArea" height="200" placeholder="Enter text for the page here"/>
    <feedback label="Feedback" type="TextArea" height="100" placeholder="Enter feedback here"/>

	<buttonLabel label="Button Label" type="TextInput" wysiwyg="true" divider="true" language="true" />
	<buttonWidth label="Button Width" type="NumericStepper" min="100" max="300" step="10" defaultValue="120" width="100" language="true" deprecated="Width is now set automatically"/>
	<feedbackScore label="Score Feedback" type="TextInput" wysiwyg="true" language="true" />
    <incomplete label="Incomplete Text" type="TextInput" wysiwyg="true" language="true" defaultValue="Complete the exercise." mandatory="true"/>

    <trackingWeight label="Tracking Score Weight" optional="true" type="textInput" width="120" defaultValue="1.0" condition="judge!='false'" tooltip="Customise the weight of the task on this page, relative to other scored pages in the project. Setting the weight to 0 will mean that the task on this page will not contribute to the project's overall score." />
	<judge label="Mark Answer" optional="true" type="CheckBox" defaultValue="true" conditionTrigger="true" tooltip="Uncheck this option to use this activity to record a user's opinion. Answers will be recorded (e.g. for later use on the results page) but will not be marked as correct/incorrect. When unmarked, a score of 100% will be recorded for the completed activity."/>

    <newNodes>
      <category><![CDATA[<category name="Enter Category Name"/>]]></category>
    </newNodes>

    <QFGroup type="group" label="Quick Fill" tooltip ="Generate a blank template based on your specifications." optional="true">
      <qfCategory label="Number of Categories" type="TextInput" wysiwyg="true" defaultValue = "3" optional="true"/>
      <qfItem label="Number of Items per Category" type="TextInput" wysiwyg="true" defaultValue = "5" optional="true"/>
      <qfButton type="quickfillbutton" optional="true"/>
    </QFGroup>

  	<AIGroup type="group" label="AI" tooltip ="Generate content automatically with the help of AI." optional="true">
            <aiSelector label="AI model" options="GPT (OpenAI),Claude (Anthropic), Mistral AI" type="comboBox" data="openai,anthropic,mistralai" defaultValue="openai" width="120" conditionTrigger="true" optional="true"/>
            <subject label="Categories" type="TextInput" tooltip = "List each category separated by a comma (,). Categories may be single words or sentences (as long as they don't contain commas). Examples: 'Mammals, birds, fish', 'birds endemic to the Netherlands, common birds found in Europe, birds found exclusively outside of Europe'." defaultValue = "" placeholder="Enter categories here. E.g. Category 1, Category 2..." optional="true"/>
            <useContext label="Generate Based on Context" type="checkbox" defaultValue="false" tooltip="When selected, the AI model will also take into account the current contents of the entire learning object when generating this object." condition="aiSelector=='openai'" optional ="true"/>
            <wordsPerCategory label="Words per Category" tooltip = "Specify how many words should be included in (each) category. For example, '5' will generate five words per category. '2 (category 1), 3(category 2)' will generate two and three words for each category according to the order in which they were listed." type="TextInput" wysiwyg="true" defaultValue = "5" optional="true"/>
            <ageRange label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the complexity of the language. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." defaultValue="" placeholder="Enter reading level. Defaults to 'Intermediate English, B2'" optional="true"/>
            <eduLevel label="Education Level" type="TextInput" tooltip="The education level for which the content is intended. Examples: University students, HBO students in the Netherlands, Middle school students who already have learned the basics, etc." defaultValue="" placeholder="Enter educational level. Defaults to 'University.'" optional="true"/>
            <voiceSelector label="Tone and Style" type="TextInput" defaultValue="" placeholder="Enter an indicator of tone. Defaults to 'Semi-formal.'" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." optional="true"/>
            <uploadPrompt label="Information Source" options="None (uses model base knowledge), Submit Snippet, Upload File" type="comboBox" data="false,trueText,true" defaultValue="false" tooltip="Select 'Submit Snippet' when you wish for the model to use the provided text as a source, 'Upload File' when you wish to upload a file or when using a video or audio link as a source. Please ensure the uploaded file or provided snippet corresponds to the requested subject. If relevant information is not found in the snippet or file, the AI will attempt to supplement with its own knowledge." conditionTrigger="true" condition="aiSelector=='openai'" optional="true"/>
            <textSnippet label="Text Snippet" type="text" tooltip="Provide the text snippet you wish the model to use as a source for generating the interactivity." condition="uploadPrompt=='trueText'" optional="true"/>
            <file label="File" type="media" defaultValue="Upload a file or enter a video link here..." tooltip="Select a video, audio, powerpoint, PDF or other text file to be used for content generation." condition="uploadPrompt=='true' &amp;&amp; aiSelector=='openai'" optional="true"/>
            <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" condition="uploadPrompt=='true' &amp;&amp; aiSelector=='openai'" optional ="true"/>
            <aiButton type="aibutton" optional="true"/>
            <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>
      </AIGroup>
  </categories>

  <category menuItem="Category" icon="icGroup" remove="true">

    <name label="Category Name" type="TextInput" wysiwyg="true"/>

    <newNodes>
      <item><![CDATA[<item name="Enter Item Text"/>]]></item>
    </newNodes>

  </category>

  <item menuItem="Item" icon="icBullet">
    <name label="Item Text" type="TextInput" wysiwyg="true"/>
  </item>  
  
</wizard>
