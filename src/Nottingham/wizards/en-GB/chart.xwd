<wizard menus="Charts">
  <pageWizard remove="true" duplicate="false">
    <newNodes>
      <chart><![CDATA[<chart name="Enter Page Title" chartTitle="Chart Title" chartType="line" text="Enter Page Text" align="left"/>]]></chart>
    </newNodes>
  </pageWizard>

  <!-- CHARTS================================== -->

  <chart menu="Charts" menuItem="Basic Chart" hint="A page for basic charts. Choose from line, bar, stacked bar or pie charts, and add several series of data to the chart." icon="icChart" thumb="thumbs/charts.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#basicchart" remove="true">

    <name label="Page Title" type="TextInput" wysiwyg="true"/>
    <text label="Page Text" type="TextArea" height="300"/>
    <chartTitle label="Chart Title" type="TextInput" wysiwyg="true"/>
    <chartType label="Chart Type" options="Line,Bar,Stacked bar,Pie" type="ComboBox" data="line,bar,stacked bar,pie" defaultValue="line" width="120"/>
    <align label="Align Text" options="Left,Right" type="ComboBox" data="left,right" defaultValue="left" width="100"/>
	
	<alt label="Summary" type="TextInput" wysiwyg="true" defaultValue="Enter a Summary of the Chart's Contents for Accessibility" optional="true" tooltip="A description of the chart that will be read by screenreaders. Add this to improve the accessibility of the page"/>
	
    <newNodes>
      <series><![CDATA[<series name="Series Name" data="label|data" colour="0xFF0000"/>]]></series>
    </newNodes>	
	
  </chart>

  <series menuItem="Series" remove="true" icon="icBullet">
    <name label="Series Name" type="TextInput" wysiwyg="true"/>
    <data label="Chart Data" headers="X,Y" newRow="label,data" type="DataGrid" height="190" width="390" columns="2" editable="1,1" colWidths="195,195" controls="1"/>
    <colour label="Colour" type="colourPicker" defaultValue="0xFF0000"/>
  </series>

</wizard>