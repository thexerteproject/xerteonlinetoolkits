<wizard menus="Interactivity">  <pageWizard remove="true" duplicate="false">    <newNodes>      <textMatch><![CDATA[<textMatch name="Enter Page Title" pageText="" text="" maxAttempts="3"      panelWidth="Medium" panelWidthCustom="50" align="Right" panelStyle="false" removeTxt="false"      correctMessage="Correct answers are shown" submitBtnTxt="Submit" feedback="" allWrong="You have not placed any labels correctly. Try again." allWrongTracking="You have not placed any labels correctly." score="You have scored {i} out of {n}. Try again." scoreTracking="You have scored {i} out of {n}." incomplete="Complete the exercise." />]]></textMatch>    </newNodes>  </pageWizard>  <!-- MATCHING TEXTS============================ -->  <textMatch menu="Interactivity" menuItem="Matching Texts" hint="An interaction for the user to match chunks of text." icon="icConnect" thumb="thumbs/textMatch.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#matchingtexts" wiki="https://xerte.org.uk/wiki/doku.php?id=interactivity_matching_texts_page" remove="true">    <name label="Page Title" type="TextInput" wysiwyg="true"/>    <pageText label="Page Text" type="TextArea" height="100" placeholder="Enter text for the page here" condition="(panelWidth!='Full'&amp;&amp;panelWidth!=undefined)||(removeTxt!='true'&amp;&amp;removeTxt!=undefined)" mandatory="true"/>    <text label="Question" type="TextArea" height="100" placeholder="Enter text for the page here"/>    <feedback label="Feedback" type="TextArea" height="100" placeholder="Enter feedback here"/>	<maxAttempts label="Attempts Before Hint" type="NumericStepper" min="1" max="99" step="1" defaultValue="3" mandatory="true" />    <layoutGroup label="Page Layout" type="group">        <panelWidth label="Panel Width" options="Small,Medium,Large,Full,Custom" type="ComboBox" data="Small,Medium,Large,Full,Custom" defaultValue="Full" conditionTrigger="true" mandatory="true"/>        <panelWidthCustom label="Custom Width (%)" type="NumericStepper" min="10" max="90" step="1" defaultValue="50" condition="panelWidth=='Custom'"/>        <align label="Panel Position" options="Right,Left" type="ComboBox" data="Right,Left" defaultValue="Right" condition="panelWidth!='Full'&amp;&amp;panelWidth!=undefined"/>        <panelStyle label="Remove Panel Style" type="CheckBox" defaultValue="true"/>        <removeTxt label="Remove Page Text" type="CheckBox" defaultValue="true" conditionTrigger="true" condition="panelWidth=='Full'||panelWidth==undefined"/>    </layoutGroup>    <textTopGroup label="Text Above Panel" type="group" optional="true">        <textTop label="Text" type="TextArea" height="100" optional="true"/>        <textTopWidth label="Full Width" type="CheckBox" optional="true" defaultValue="false" condition="panelWidth!='Full'"/>    </textTopGroup>    <textBelowGroup label="Text Below Panel" type="group" optional="true">        <textBottom label="Text" type="TextArea" height="100" optional="true"/>        <textBottomWidth label="Full Width" type="CheckBox" optional="true" defaultValue="false" condition="panelWidth!='Full'"/>    </textBelowGroup>	    <correctMessage label="Correct Message" type="TextInput" wysiwyg="true" divider="true" language="true" />    <submitBtnTxt label="Check Button Label" type="TextInput" wysiwyg="true" language="true" />    <submitBtnTip label="Check Button Tip" type="textInput" language="true" deprecated="This property is no longer required"/>	    <submitBtnWidth label="Check Button Width" type="NumericStepper" min="80" max="250" step="10" width="100" defaultValue="80" language="true" deprecated="Width is now set automatically"/>		<allWrong label="All Wrong Text" type="TextInput" wysiwyg="true" language="true"/>	<score label="{i} out of {n} Text" type="TextInput" wysiwyg="true" language="true"/>	<allWrongTracking label="All Wrong Text Tracking" type="TextInput" wysiwyg="true" language="true"/>	<scoreTracking label="{i} out of {n} Text Tracking" type="TextInput" wysiwyg="true" language="true"/>	<incomplete label="Incomplete Text" type="TextInput" wysiwyg="true" language="true"/>	<trackingWeight label="Tracking Score Weight" optional="true" type="textInput" width="120" defaultValue="1.0" tooltip="Customise the weight of the task on this page, relative to other scored pages in the project. Setting the weight to 0 will mean that the task on this page will not contribute to the project's overall score." />    <markEnd label="Mark at End" type="CheckBox" defaultValue="true" optional="true"/>	    <newNodes>      <sentence><![CDATA[<sentence p1="" p2="" hint="" name="Sentence" />]]></sentence>    </newNodes>  </textMatch>  <sentence menuItem="Sentence" icon="icPageWhiteText" remove="true">    <p1 label="Part 1" type="TextArea" height="50" placeholder="Enter part one of the sentence here"/>    <p2 label="Part 2" type="TextArea" height="50" placeholder="Enter part two of the sentence here"/>	<hint label="Hint" type="TextArea" height="50" placeholder="Enter a hint here"/>		<audioGroup type="group" label="Audio Feedback" optional="true" tooltip="Add an audio player to this label, which appears when marked as correct">		<audioFeedback label="File" type="media" optional="true" placeholder="Select an audio file"/>		<audioTranscript label="Transcript" type="textArea" height="100" defaultValue="" optional="true" tooltip="A transcript button will appear on the audio player when text is added here"/>	</audioGroup>	    <name label="Label" type="TextInput" mandatory="true" defaultValue="Sentence" wysiwyg="false" tooltip="The label is read by screen readers when the drop area (containing text 1) is in focus. Brief, unique and meaningful labels will ensure screen reader users understand where the label they have selected will be dropped."/>  </sentence></wizard>