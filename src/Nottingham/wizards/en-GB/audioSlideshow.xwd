<wizard menus="Media">  <pageWizard remove="true" duplicate="false">    <newNodes>      <audioSlideshow><![CDATA[<audioSlideshow name="Enter Page Title" sound="" text="" panelWidth="Medium" erase="True"/>]]></audioSlideshow>    </newNodes>  </pageWizard>  <!-- AUDIO SLIDESHOW============================================= -->  <audioSlideshow menu="Media" menuItem="Audio Slideshow" hint="Sequence a series of images against an audio soundtrack." icon="icSound"  thumb="thumbs/audioSlideshow.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#audioslideshow" wiki="https://xerte.org.uk/wiki/doku.php?id=media_audio_slideshow_page" remove="true">    <name label="Page Title" type="TextInput" wysiwyg="true" />    <sound label="Sound" type="Media" placeholder="Select an audio file"/>    <text label="Page Text" type="TextArea" height="200" placeholder="Enter text for the page here"/>    <panelWidth label="Panel Width" options="Small,Medium,Large,Full" data="Small,Medium,Large,Full" defaultValue="Small" type="ComboBox" width="100"/>	<fadeSpeed label="Fade Speed" type="NumericStepper" min="0" max="2" step="0.1" defaultValue="0.8" optional="true" tooltip="The speed of the image change fade (in seconds). Set as 0 to change immediately to the next image with no fade animation."/>	<soundTranscript label="Transcript" type="textArea" height="100" defaultValue="" optional="true" tooltip="A transcript button will appear on the audio player when text is added here"/>    <AIGroup type="group" label="AI" optional="true">         <aiSelector label="AI model" options="GPT (OpenAI),Claude (Anthropic), Mistral AI" type="comboBox" data="openai,anthropic,mistralai" defaultValue="openai" width="120" conditionTrigger="true" optional="true"/>         <template label="Template" options="Custom,Image Alt. Text" type="comboBox" data="custom,altText" defaultValue="custom" width="120" conditionTrigger="true" condition="aiSelector=='openai'" optional="true"/>         <subject label="Subject" type="TextInput" defaultValue="" placeholder="Enter a subject here..." tooltip="This determines which area or subject the generated words will follow." optional="true" condition="template=='custom'"/>         <useContext label="Generate Based on Context" type="checkbox" defaultValue="false" tooltip="When selected, the AI model will also take into account the current contents of the learning object when generating this object." optional="true" condition="template=='custom' &amp;&amp; aiSelector=='openai'"/>         <additionalInstructions label="Additional Instructions" type="text" tooltip="Provide any additional instructions here. For example: create a summary, generate content in the form of a list, use only chapter 3 from the uploaded file. It is also possible to ask questions. For example: 1. Write a summary of the final results of the experiment 2. Specify how they tested their findings. Finally, additional instructions can be targeted and interact with example content. For example, you can copy an interesting paragraph or point into the example content, and then ask to: make the example content more concise, expand on the example content, add more specific examples to the content, add points which are only relevant for teachers in the Netherlands/Flanders, and so on." wysiwyg="true" optional="true" defaultValue="Provide a brief summary on the given subject." condition="template=='custom'"/>         <exampleContent label="Example Content (Optional)" type="text" tooltip="Optionally, provide an example of the kind of content you expect as an output. The model will then attempt to generate a similar output, or follow the additional instructions on how to handle or extrapolate on this output." wysiwyg="true" optional="true" condition="template=='custom'"/>         <ageRange label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the complexity of the language. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." defaultValue="" placeholder="Enter reading level. Defaults to 'Intermediate English, B2'" condition="template=='custom'" optional="true"/>         <eduLevel label="Education Level" type="TextInput" tooltip="The education level for which the content is intended. Examples: University students, HBO students in the Netherlands, Middle school students who already have learned the basics, etc." condition="template=='custom'" defaultValue="" placeholder="Enter educational level. Defaults to 'University.'" optional="true"/>         <voiceSelector label="Tone and Style" type="TextInput" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." defaultValue="" placeholder="Enter an indicator of tone. Defaults to 'Semi-formal.'" condition="template=='custom'" optional="true"/>         <uploadPrompt label="Information Source" options="None (uses model base knowledge), Submit Snippet, Upload File" type="comboBox" data="false,trueText,true" defaultValue="false" tooltip="Select 'Submit Snippet' when you wish for the model to use the provided text as a source, 'Upload File' when you wish to upload a file or when using a video or audio link as a source. Please ensure the uploaded file or provided snippet corresponds to the requested subject. If relevant information is not found in the snippet or file, the AI will attempt to supplement with its own knowledge." conditionTrigger="true" condition="template=='custom' &amp;&amp; aiSelector=='openai'" optional="true"/>         <textSnippet label="Text Snippet" type="text" tooltip="Provide the text snippet you wish the model to use as a source for generating the interactivity." condition="uploadPrompt=='trueText' &amp;&amp; template=='custom'" optional="true"/>         <file label="File" type="media" defaultValue="Upload a file or enter a video link here..." tooltip="Select a video, audio, powerpoint, PDF or other text file to be used for content generation." condition="uploadPrompt=='true' || template=='altText'" optional="true"/>         <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" condition="uploadPrompt=='true' &amp;&amp; template=='custom'" optional ="true"/>         <aiButton type="aibutton" optional="true"/>         <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>    </AIGroup>    <QFGroup type="group" label="Quick Fill" tooltip ="Generate a blank template based on your specifications." optional="true">        <qfSynchPoint label="Number of Slides" type="TextInput" wysiwyg="true" defaultValue = "3" optional="true"/>        <qfButton type="quickfillbutton" optional="true"/>    </QFGroup>    <newNodes>      <synchPoint><![CDATA[<synchPoint name="Enter Slide Title" text="" align="Top" synch="0"/>]]></synchPoint>    </newNodes>  </audioSlideshow>    <synchPoint menuItem="Slide" icon="icBullet" remove="true">    <name label="Slide Title" type="TextInput" wysiwyg="true" />    <text label="Slide Text" type="TextArea" height="250" placeholder="Content for the slide"/>    <align label="Align Text" options="Top,Bottom" type="ComboBox" data="Top,Bottom" defaultValue="Top" width="100"/>		<imgInfo type="group" label="Image" optional="true">		<url label="Image" type="media"  optional="true" defaultValue="" placeholder="Select an image"/>		<tip label="Description" type="textInput" optional="true" defaultValue="" placeholder="Enter a description for accessibility"/>		<caption label="Caption" type="textInput" optional="true" defaultValue="" wysiwyg="true" placeholder="Enter the caption text" tooltip="Optional: add a caption below the image"/>	</imgInfo>		<synch label="Synch Point" type="TextInput"/>  </synchPoint>  </wizard>